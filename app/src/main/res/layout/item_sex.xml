<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_divider_color"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                app:cardElevation="1dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_material_item"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="15dp">

                <TextView
                        android:id="@+id/book_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欲海花-欲望记忆"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                    <TextView
                            android:id="@+id/right_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_sex_flag"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:textColor="@color/md_orange_700"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                            android:id="@+id/author_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_sex_author"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/author_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text=" 好甜好鲜 "
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/author_iv"
                            app:layout_constraintEnd_toStartOf="@+id/right_iv"
                            app:layout_constraintStart_toEndOf="@+id/author_iv"
                            app:layout_constraintTop_toTopOf="@+id/author_iv" />

                    <ImageView
                            android:id="@+id/chapter_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_book_reading"
                            app:layout_constraintEnd_toEndOf="@+id/author_iv"
                            app:layout_constraintStart_toStartOf="@+id/author_iv"
                            app:layout_constraintTop_toBottomOf="@+id/author_iv" />

                    <TextView
                            android:id="@+id/chapter_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingStart="1dp"
                            android:text="章节:【欲海花】欲望记忆（5）"
                            android:textColor="@color/primary_text"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/chapter_iv"
                            app:layout_constraintStart_toStartOf="@+id/author_tv"
                            app:layout_constraintTop_toTopOf="@+id/chapter_iv" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                        android:id="@+id/desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="5"
                        android:text="    你认识清雨吗？如果你听说过清雨的故事，就会明白为什么这个女孩的眼神 中，总是存在着一种死亡一"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>