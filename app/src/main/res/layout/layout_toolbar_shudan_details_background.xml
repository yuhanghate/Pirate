<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="330dp">


        <ImageView
                android:id="@+id/bg_cover_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        <androidx.cardview.widget.CardView
                android:id="@+id/cover_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/cover_iv"
                    android:layout_width="105dp"
                    android:layout_height="140dp"
                    android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cover_cv"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cover_cv"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有书荒必看好书，你值得拥有"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/md_white_1000" />

            <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    tools:text="2019/11/18 21:54:04"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/md_white_1000" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>